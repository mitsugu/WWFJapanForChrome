{
  "manifest_version": 2,
  "name":"Weekly Weather Forcast for Japan",
  "short_name":"WWF Japan",
  "version":"1.2.0",
  "description":"日本の週間天気予報を表示します。",
  "author": "mitsugu oyama ( OrzBruford )",
  "developer": {
    "name": "mitsugu oyama ( OrzBruford )",
    "url": "https://orzbruford.nobody.jp/"
  },
  "homepage_url":"ttps://github.com/mitsugu/HutteNipponOrigin",

  "icons": {
    "16":"system_icons/16.png",
    "48":"system_icons/48.png",
    "128":"system_icons/128.png"
  },

  "browser_specific_settings": {
    "gecko": {"id": "wwfjapan@orzbruford.com"}
  },

  "browser_action": {
    "default_icon": "system_icons/weather-clear.svg",
    "default_title":"Weekly Weather Forcast for Japan",
    "browser_style":true
  },

  "background": {"scripts": ["bgs.js"]},

  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "http://www.jma.go.jp/",
    "https://www.jma.go.jp/",
    "http://www.data.jma.go.jp/",
    "https://www.data.jma.go.jp/",
    "http://cyberjapandata.gsi.go.jp/",
    "https://cyberjapandata.gsi.go.jp/"
  ]
}
